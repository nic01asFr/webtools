# API Configuration
API_TITLE=WebExtract Service
API_VERSION=1.0.0
API_HOST=0.0.0.0
API_PORT=8000

# Default LLM Configuration (can be overridden per request)
DEFAULT_LLM_PROVIDER=openai
DEFAULT_LLM_MODEL=gpt-4o
DEFAULT_LLM_API_KEY=your-api-key-here
DEFAULT_LLM_BASE_URL=

# Albert API (si vous utilisez Albert)
ALBERT_API_URL=https://albert.api.etalab.gouv.fr
ALBERT_API_KEY=your-albert-api-key
ALBERT_MODEL=AgentPublic/llama3-instruct-8b

# OpenAI (si vous utilisez OpenAI)
OPENAI_API_KEY=sk-your-openai-api-key

# Anthropic (si vous utilisez Claude)
ANTHROPIC_API_KEY=sk-ant-your-anthropic-api-key

# Playwright Configuration
PLAYWRIGHT_HEADLESS=true
PLAYWRIGHT_BROWSER_POOL_SIZE=3
PLAYWRIGHT_TIMEOUT=45000

# Extraction Configuration
DEFAULT_EXTRACTION_TIMEOUT=45
MAX_RETRIES=3
ENABLE_CACHING=true
CACHE_TTL_SECONDS=3600

# Logging
LOG_LEVEL=INFO
LOG_FORMAT=json

# Performance
MAX_CONCURRENT_EXTRACTIONS=10
